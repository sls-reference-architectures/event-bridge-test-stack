{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": ".build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["ES2015"]
  }
}
